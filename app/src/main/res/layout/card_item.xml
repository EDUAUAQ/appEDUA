<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_margin="16dp"
    android:elevation="4dp">

    <!-- Contenedor del encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nombre del banco o usuario -->
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edua"
            android:textColor="@color/dorado_clasico"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_flex" />

        <!-- Logo de Visa
        <ImageView
            android:id="@+id/logo_visa"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:contentDescription="@string/logo_de_visa"
            android:src="@drawable/visa_logo"
            android:layout_marginStart="225dp"/> -->
    </LinearLayout>

    <!-- Número de cuenta -->
    <TextView
        android:id="@+id/tv_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Número de cuenta"
        android:textColor="@color/blanco"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Tipo de cuenta -->
        <TextView
            android:id="@+id/tv_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Tipo de cuenta"
            android:textColor="@color/blanco"
            android:textSize="14sp" />

        <!-- Botón de detalles -->
        <Button
            android:id="@+id/btn_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFFFFF"
            android:text="@string/ver_detalles"
            android:textColor="@color/negro"
            android:textStyle="bold"
            android:elevation="2dp"
            android:layout_marginStart="190dp"/>

    </RelativeLayout>

</LinearLayout>